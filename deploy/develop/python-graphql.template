server {

    listen       ${NGINX_PORT};
    server_name  localhost;

    location / {
        proxy_pass http://localhost:${GRAPHIQL_PORT};
    }

    location /graphql {
        proxy_pass http://localhost:${BACKEND_PORT};
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

}
